{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "nodenext",
    "target": "es2019",
    "inlineSourceMap": false,
    "inlineSources": false,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "allowJs": true,
    "lib": [
      "es2019"
    ],
    "outDir": "dist"
  },
  "include": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
